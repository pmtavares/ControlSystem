@model IEnumerable<ControlSystem.Models.Groups>

@{
    ViewBag.Title = "Groups";
}

<h2>List of Topics</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new {@class = "btn btn-default"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Teacher")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Students
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupsDetails.Count)

        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.GroupId }, new {@class= "btn btn-primary"} ) | 
            @Html.ActionLink("Details", "Details", new { id = item.GroupId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.GroupId }, new {@class= "btn btn-primary"} )
        </td>
    </tr>
}

</table>
