@model ControlSystem.Models.UserView

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { enctype="multipart/form-data"})) <!--We have to put this everytime we work with images-->
